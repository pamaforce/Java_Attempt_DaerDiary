<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/edit_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDDE7ED"
    android:clipChildren="false" >

    <RelativeLayout
        android:id="@+id/texts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_background">

        <EditText
            android:inputType="text"
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/edit_background"
            android:hint="输入标题"
            android:paddingStart="30dp"
            android:paddingTop="20dp"
            android:paddingEnd="100dp"
            android:textSize="22sp"
            android:textColor="#536773"/>

        <TextView
            android:id="@+id/edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:text="2022-6-11"
            android:textColor="#B2536773"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_background"
            android:hint="在此输入文字……"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingRight="30dp"
            android:textColor="#536773"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:clipChildren="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true">

            <View
                android:id="@+id/back_btn"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/bottom_btn_3" />

            <RelativeLayout
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-20px"
                android:background="@drawable/menu_background"
                android:clipChildren="false"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:text="管理笔记"
                    android:textColor="#536773"
                    android:textSize="16sp" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/sureBtn"
            android:layout_width="123dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bottom_btn_4" />
    </RelativeLayout>

</RelativeLayout>